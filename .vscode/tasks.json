{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-extension",
      "type": "shell",
      "command": "bun run build",
      "options": {
        "cwd": "${workspaceFolder}/packages/extension"
      },
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "watch-extension",
      "type": "shell",
      "command": "bun run dev",
      "options": {
        "cwd": "${workspaceFolder}/packages/extension"
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": ["$esbuild-watch"]
    },
    {
      "label": "build-all",
      "type": "shell",
      "command": "bun run build",
      "group": "build",
      "problemMatcher": ["$tsc"]
    }
  ]
}
